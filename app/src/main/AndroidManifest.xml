<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thedemitrius.androidif"
    android:versionCode="1"
    android:versionName="1.0" >


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <supports-screens
      android:smallScreens="false"
      android:normalScreens="true"
      android:largeScreens="true"
      android:xlargeScreens="true"
        android:supportsRtl="true"/>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/MyTheme"
        android:allowBackup="true"
        >
        <activity
            android:name="thedemitrius.androidif.Init"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="thedemitrius.androidif.glk.FileDialog"></activity>
        <activity android:name="thedemitrius.androidif.glk.ShowImage"></activity>
    </application>

</manifest>